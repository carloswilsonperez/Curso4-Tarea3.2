<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrador.curso4_tarea3_2">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.administrador.curso4_tarea3_2.Activity.MainActivity"
            android:label="Curso 4 Tarea 3.1"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.administrador.curso4_tarea3_2.Activity.Activity2"
            android:parentActivityName="com.example.administrador.curso4_tarea3_2.Activity.MainActivity">
            <!-- Soporte para versiones 4.0 o menores -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.administrador.curso4_tarea3_2.Activity.MainActivity" />
        </activity>

        <activity
            android:name="com.example.administrador.curso4_tarea3_2.Activity.FormularioActivity"
            android:windowSoftInputMode="stateHidden" ><!--Oculta el teclado al arbrir la actividad si perder el foco -->
        </activity>

        <activity
            android:name="com.example.administrador.curso4_tarea3_2.Activity.AcercadeActivity"
            android:parentActivityName="com.example.administrador.curso4_tarea3_2.Activity.MainActivity"
            android:label="@string/title_activity_acercade"
            android:theme="@style/AppTheme">
            <!-- Soporte para versiones 4.0 o menores -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.administrador.curso4_tarea3_2.Activity.MainActivity" />
        </activity>

        <activity
            android:name="com.example.administrador.curso4_tarea3_2.Activity.ConfiguraCuentaActivity"
            android:parentActivityName="com.example.administrador.curso4_tarea3_2.Activity.MainActivity"
            android:windowSoftInputMode="stateHidden" ><!--Oculta el teclado al arbrir la actividad si perder el foco -->
            <!-- Soporte para versiones 4.0 o menores -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.administrador.curso4_tarea3_2.Activity.MainActivity" />
        </activity>

        <service
            android:name=".servicios.NotificationIDTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".servicios.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>